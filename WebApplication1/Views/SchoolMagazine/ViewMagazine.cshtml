@{ ViewData["Title"] = "Просмотр журнала"; }

@model WebApplication1.ViewModels.SchoolMagazineViewModel
@{int count = 0;}
<style>
    .container {
        margin-left: 3%;
        padding: 0;
    }

    h2 {
        text-transform: uppercase;
        margin-left: 3%;
        text-align: left;
    }

    h3 {
        text-transform: uppercase;
        margin-left: 3%;
        text-align: left;
    }
</style>
<h2>Журнал для класса - <span class="text-info">@ViewBag.clas"@ViewBag.ClassLetter"</span></h2>
<h3>Предмет - <span class="text-info">@ViewBag.Subject</span></h3>
<div class="container">
    <form method="post" asp-action="EditMagazine" asp-route-Subject="@ViewBag.Subject" asp-route-Class="@ViewBag.clas" asp-route-ClassLetter="@ViewBag.ClassLetter" asp-route-Quarters="@ViewBag.Quart">
        <table class="table table-bordered table-dark">
            <tr>
                <th>ФИО / Дата</th>
                @foreach (var col in ViewBag.days)
                {
    <th width="10"><input class="table-dark" width="10" size="3" type="text" readonly value="@col.Day.@col.Month" asp-for="Date" /></th>}
                <th>Четверть @ViewBag.Quart</th>
            </tr>
            @foreach (var fio in ViewBag.names)
            {
<tr>
    <td><input class="table-dark" size="30" type="text" readonly value="@fio" /></td>

    @for (int i = 0; i < ViewBag.days.Count + 1; i++)
    {

<td width="10"><input width="10" size="5" class="table-dark" type="text" style="width:25px" value="@Model.Pupils_marks[count][i]" asp-for="Pupils_marks[count][i]" /></td> @*}
*@}

</tr>
count++;
}
        </table>
        <button type="submit" class="btn btn-info btn-rounded" style="float: right; font-size: 12px;" name="button">
            Сохранить
        </button>
    </form>
</div>
